    <LastName>Øhlsen</LastName>
    <Age>23</Age>
  </Persons>
  <Persons>
    <FirstName>Åggie</FirstName>
    <LastName>variable('otherLastName')</LastName>
    <Age>56</Age>
  </Persons>
  <Persons>    
    <FirstName>Ærild</FirstName>
    <LastName>@LastName</LastName>
    <Age>Convert(int, variable('age'))</Age>
  </Persons>
  <Persons>    
